<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="撮影環境設定">
        <CheckBoxPreference
            android:summary="撮影中のバッテリー消費を抑えることができます"
            app:defaultValue="true"
            app:key="Syncam-Setting-dark"
            app:title="ゲスト端末の画面を暗くする"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory app:title="高度な設定">
        <EditTextPreference
            app:defaultValue="0"
            app:key="Syncam-Setting-CameraLag"
            app:title="端末固有のラグの修正(ミリ秒)"
            app:useSimpleSummaryProvider="false"
            android:summary="撮影時の誤差を手動で修正できます\n詳しくはマニュアルを参照してください" />
    </PreferenceCategory>
    <PreferenceCategory app:title="ヘルプ">
        <Preference
            app:title="保存場所について"
            android:summary="Android 10以前：\n/DCIM/SYNCAM\n/Music/AUDIO\nAndroid 11以降：\n/Android/data/com.example.syncam"/>
    </PreferenceCategory>
</PreferenceScreen>