<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="撮影環境設定">
        <CheckBoxPreference
            android:summary="バッテリー消費を抑えます"
            app:defaultValue="true"
            app:key="Syncam-Setting-dark"
            app:title="撮影時にゲストの画面を暗転"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory app:title="高度な設定">
        <EditTextPreference
            app:defaultValue="0"
            app:key="Syncam-Setting-CameraLag"
            app:title="端末固有のラグの修正(ミリ秒)"
            app:useSimpleSummaryProvider="false"
            android:summary="詳細設定マニュアルを参照" />
    </PreferenceCategory>
    <PreferenceCategory app:title="ヘルプ">
        <Preference
            android:title="詳細設定マニュアル"
            android:key="Syncam-Manual" />
        <Preference
            app:title="保存場所について"
            android:key="Syncam-Storage-Location" />
    </PreferenceCategory>
</PreferenceScreen>